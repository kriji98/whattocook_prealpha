<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="project.tp.whattocook.AddRecipes">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_title_add_recipes"
        android:text="Заглавие"
        android:textSize="12sp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_title_add_recipes"
        android:id="@+id/add_recipes_title_recipe"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_recipes_title_recipe"
        android:id="@+id/text_time_add_recipes"
        android:text="Време за приготвяне"
        android:textSize="12sp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_time_add_recipes"
        android:id="@+id/add_recipes_time"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_recipes_time"
        android:id="@+id/text_ingredients_add_recipes"
        android:text="Съставки"
        android:textSize="12sp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_ingredients_add_recipes"
        android:id="@+id/add_recipes_ingredients"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_below="@+id/add_recipes_ingredients"
        android:id="@+id/text_preparation_add_recipes"
        android:text="Начин на приготвяне"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_preparation_add_recipes"
        android:id="@+id/add_recipes_preparation"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="СНИМКА"
        android:id="@+id/button_add_recipes_photo"
        android:background="@drawable/buttonshape"
        android:clickable="true"
        android:textColor="#F7F7F7"
        android:textStyle="normal|italic"
        android:layout_column="2"
        android:layout_gravity="right"
        android:textAlignment="center"
        android:layout_below="@id/add_recipes_preparation"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ГОТОВО"
        android:id="@+id/button_add_recipes_ready"
        android:background="@drawable/buttonshape"
        android:clickable="true"
        android:textColor="#F7F7F7"
        android:textStyle="normal|italic"
        android:layout_column="2"
        android:layout_gravity="center|bottom"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/button_add_recipes_photo"
        />

</RelativeLayout>
