<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="project.tp.whattocook.AskRecipeOrIdea"
    tools:showIn="@layout/activity_ask_recipe_or_idea">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="НОВА РЕЦЕПТА"
        android:id="@+id/askrecipeoridea_add_recipes_button"
        android:background="@drawable/buttonshape"
        android:clickable="true"
        android:textColor="#F7F7F7"
        android:textStyle="normal|italic"
        android:layout_column="2"
        android:layout_gravity="right"
        android:textAlignment="center"
        android:layout_marginBottom="166dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ТЪРСЕНЕ"
        android:id="@+id/askrecipeoridea_search_button"
        android:background="@drawable/buttonshape"
        android:clickable="true"
        android:textColor="#F7F7F7"
        android:textStyle="normal|italic"
        android:layout_column="2"
        android:layout_gravity="right"
        android:textAlignment="center"
        android:layout_alignTop="@+id/askrecipeoridea_rotd_button"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="РЕЦЕПТИ НА ДЕНЯ"
        android:id="@+id/askrecipeoridea_rotd_button"
        android:background="@drawable/buttonshape"
        android:clickable="true"
        android:textColor="#F7F7F7"
        android:textStyle="normal|italic"
        android:layout_column="2"
        android:layout_gravity="right"
        android:textAlignment="center"
        android:layout_marginBottom="64dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/imageView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/logo"
        android:layout_above="@+id/askrecipeoridea_add_recipes_button"
        android:layout_alignParentEnd="true" />

</RelativeLayout>